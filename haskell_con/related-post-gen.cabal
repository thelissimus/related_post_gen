cabal-version: 3.0
name:          related-post-gen
version:       0.0.0.0
author:        thelissimus
maintainer:    thelissimus@tuta.io
build-type:    Simple

executable related-post-gen
  ghc-options:
    -Wall -Wextra -Weverything -Wcompat -Wno-implicit-prelude
    -Wno-unsafe -Wno-missing-safe-haskell-mode
    -Wno-missing-local-signatures -Wno-missing-import-lists
    -Wno-all-missed-specialisations -O2

  main-is:          Main.hs
  build-depends:
    , aeson
    , async
    , base               ^>=4.17.2.0
    , bytestring
    , deepseq
    , parallel
    , text
    , time
    , vector
    , vector-hashtables

  hs-source-dirs:   app
  default-language: GHC2021
